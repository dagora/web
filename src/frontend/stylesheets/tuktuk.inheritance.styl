@import "__init.styl"

[data-graph=bar]
  height: 320px

[data-graph=pie]
  width: 25%

[data-tuktuk=totals]#overview > li
  width: 33%

  &:nth-child(2)
    border-left: solid 1px lighten(THEME, 30%)
    border-right: solid 1px lighten(THEME, 30%)

  & .icon
    font-size: 3em

  & strong
    display: inline-block
    font-size: 4.5em
    margin-left: 0.2em

  & small
    display: block
    margin-top: 1em
    font-weight: bold

  & .icon, small
    color: lighten(THEME, 65%)


section header
  & input
    width: 50%

.box
  opacity: 0
  transform scale(0)
  transition all 300ms

  &.hidden
    display: none !important

  &.active
    opacity: 1
    transform scale(1)

  &:nth-child(2)
    transition-delay: 300ms
  &:nth-child(3)
    transition-delay: 600ms
